<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <!-- Appenders 定义日志输出目的地 -->
    <Appenders>
        <!-- 控制台输出 -->
        <Console name="Console" target="SYSTEM_OUT">
            <!-- PatternLayout 定义日志输出格式，使用 %highlight 添加颜色 -->
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} / %highlight{%-5level} %logger{36} - %msg%n" />
            <!-- Filters 定义过滤规则 -->
            <Filters>
                <!-- ThresholdFilter 设置日志级别阈值 -->
                <ThresholdFilter level="WARN" onMatch="DENY" onMismatch="NEUTRAL"/>
            </Filters>
        </Console>

        <!-- 控制台错误输出 -->
        <Console name="ConsoleErr" target="SYSTEM_ERR">
            <!-- PatternLayout 定义日志输出格式，使用 %highlight 添加颜色 -->
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} / %highlight{%-5level} %logger{36} - %msg%n" />
            <!-- Filters 定义过滤规则 -->
            <Filters>
                <!-- ThresholdFilter 设置日志级别阈值 -->
                <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </Console>

        <!-- 按文件大小和时间拆分的日志文件输出 -->
        <RollingRandomAccessFile name="RollingRandomAccessFile" fileName="logs/app.log" filePattern="logs/app-%d{yyyy-MM-dd}-%i.log.gz">
            <!-- PatternLayout 定义日志输出格式 -->
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} / %-5level %logger{36} - %msg%n" />
            <!-- Policies 定义日志滚动策略 -->
            <Policies>
                <!-- SizeBasedTriggeringPolicy 按文件大小触发滚动 -->
                <SizeBasedTriggeringPolicy size="2 MB" />
                <!-- TimeBasedTriggeringPolicy 按时间触发滚动 -->
                <TimeBasedTriggeringPolicy />
            </Policies>
            <!-- DefaultRolloverStrategy 定义日志文件滚动策略 -->
            <DefaultRolloverStrategy max="60" fileIndex="max" />
        </RollingRandomAccessFile>
    </Appenders>

    <!-- Loggers 定义日志记录器 -->
    <Loggers>
        <!-- Root 定义根日志记录器 -->
        <Root level="debug">
            <!-- AppenderRef 引用日志输出目的地 -->
            <AppenderRef ref="Console" />
            <AppenderRef ref="ConsoleErr" />
            <AppenderRef ref="RollingRandomAccessFile" />
        </Root>
    </Loggers>
</Configuration>